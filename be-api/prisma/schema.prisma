generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// ENUMS
//
enum AttendanceStatus {
  PRESENT
  LATE
  COMPLETED
}

enum UserRole {
  SUPERADMIN
  ADMIN
  KAPROG
  PEKERJA
}

//
// MODELS
//
model User {
  id              String       @id @default(uuid())
  username        String       @unique
  email           String?      @unique
  password        String
  name            String?
  avatar          String?

  role            UserRole     @default(PEKERJA)
  position        String?      
  departmentId    String?      
  departmentName  String?      // ‚úÖ field baru

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  attendances   Attendance[]
  department    Department?  @relation(fields: [departmentId], references: [id])
}

model Attendance {
  id             String           @id @default(uuid())
  userId         String
  departmentId   String?
  departmentName String?
  date           DateTime         @default(now())   // tanggal absen
  timeIn         DateTime?
  timeOut        DateTime?
  qrValue        String           // ‚ùå hapus @unique
  role           UserRole         @default(PEKERJA)
  status         AttendanceStatus @default(PRESENT)

  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  // RELATIONS
  user           User             @relation(fields: [userId], references: [id])
  department     Department?      @relation(fields: [departmentId], references: [id])

  // ‚úÖ tiap user cuma bisa punya 1 attendance record per hari
  @@unique([userId, date])
}



model Department {
  id          String       @id @default(uuid())
  name        String       @unique
  code        String       @unique

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // RELATIONS
  users       User[]
  barcodes    Barcode[]
  attendances Attendance[]
}

model Barcode {
  id             String      @id @default(uuid())
  value          String      @unique
  departmentId   String      // üîß hapus @unique di sini
  departmentName String?
  latitude       Float
  longitude      Float
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  department     Department  @relation(fields: [departmentId], references: [id])
}
